<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_new"
    tools:context="gcm.play.android.samples.com.gcmquickstart.CreateNewActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/symbolPicker"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/ripple"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content">
            <TextView
                android:text="Symbol"
                android:textColor="#000000"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView android:text="AAPL"
                android:id="@+id/selectedTicker"
                android:textColor="#888888"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/amountPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/symbolPicker"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/ripple"
            >
            <TextView
                android:text="Price"
                android:textColor="#000000"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="$100"
                android:id="@+id/selectedAmount"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="right"
                android:textColor="#888888"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/amountPicker"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/ripple"
            android:id="@+id/typePicker"
            >
            <TextView
                android:text="Type"
                android:textColor="#000000"
                android:gravity="left"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Above price"
                android:id="@+id/selectedType"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="right"
                android:textColor="#888888"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
